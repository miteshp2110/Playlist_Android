<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/nav_host_fragment"
               motion:framePosition="5"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/textsLayout"
               motion:framePosition="5"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/bottomNavBar"
               motion:framePosition="5"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/miniplayer_playPauseButton"
               motion:framePosition="5"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/linearLayout"
               motion:framePosition="5"
               android:alpha="0" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/miniplayer"
            motion:clickAction="transitionToEnd"
            />

    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bottomNavBar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/miniplayer"
            motion:layout_constraintEnd_toEndOf="@id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
            motion:layout_constraintVertical_bias="1"
            motion:layout_constraintTop_toTopOf="@id/mainLayout"
            motion:layout_constraintStart_toStartOf="@id/mainLayout" />
        <Constraint
            android:id="@+id/linearLayout"
            motion:layout_constraintEnd_toEndOf="@id/miniplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/miniplayer_songImage"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="@id/miniplayer"
            android:alpha="0" />
        <Constraint
            android:id="@+id/miniplayer_playPauseButton"
            motion:layout_constraintEnd_toEndOf="@id/miniplayer"
            motion:layout_constraintStart_toEndOf="@id/textsLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/miniplayer_songImage"
            android:layout_marginEnd="20dp"
            motion:layout_constraintTop_toTopOf="@id/miniplayer_songImage"
            motion:layout_constraintHorizontal_bias="1.0"
            android:translationZ="1dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/miniplayer_songImage"
            motion:layout_constraintEnd_toEndOf="@+id/miniplayer"
            android:layout_width="250dp"
            android:layout_height="250dp"
            motion:layout_constraintBottom_toBottomOf="@+id/miniplayer"
            motion:layout_constraintVertical_bias="0.25"
            motion:layout_constraintTop_toTopOf="@id/miniplayer"
            motion:layout_constraintHorizontal_bias="0.50"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="@id/miniplayer" />
        <Constraint
            android:id="@+id/textsLayout"
            motion:layout_constraintEnd_toStartOf="@id/miniplayer_playPauseButton"
            motion:layout_constraintStart_toEndOf="@id/miniplayer_songImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/miniplayer_songImage"
            android:layout_marginStart="10dp"
            motion:layout_constraintTop_toTopOf="@id/miniplayer_songImage"
            android:translationZ="1dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/nav_host_fragment"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/miniplayer"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/closeExtendedPlayer"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="1"
            motion:layout_constraintHorizontal_bias="0.06"
            motion:layout_constraintTop_toTopOf="parent"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/extendedPlayer_songName"
            motion:layout_constraintEnd_toEndOf="@id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/miniplayer_songImage"
            android:alpha="1"
            motion:layout_constraintHorizontal_bias="0.50"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="@id/mainLayout"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/extendedPlayer_artistName"
            motion:layout_constraintEnd_toEndOf="@id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/extendedPlayer_songName"
            android:alpha="1"
            motion:layout_constraintHorizontal_bias="0.50"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="@id/mainLayout"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/widgetsContainer"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/extendedPlayer_artistName"
            android:alpha="1"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" />
        <Constraint
            android:id="@+id/extendedPlayer_seekBar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/widgetsContainer"
            android:alpha="1"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" />
        <Constraint
            android:id="@+id/extendedPlayer_controllerContainer"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/extendedPlayer_seekBar"
            android:alpha="1"
            android:translationZ="1dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="70dp" />

    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start" >
        <OnClick motion:targetId="@+id/closeExtendedPlayer" />
    </Transition>
</MotionScene>